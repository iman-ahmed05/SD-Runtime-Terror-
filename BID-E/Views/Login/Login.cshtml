@model BID_E.Models.Login
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Login to BID-E</h4>
<hr class="my-4">
<form class="form-horizontal" asp-controller="Login" asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" placeholder="Enter your Username" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Enter your Password" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-dark">Login</button>
        <hr class="my-4">
        <h5>No account?</h5>
        <button class="btn btn-dark" asp-controller="Login" asp-action="Register">Become a Researcher</button>
    </div>
</form>