@model BID_E.Models.Login
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Create A New Account</h4>
<hr class="my-4">
<div class="form-horizontal">
    <form asp-controller="Login" asp-action="Register" method="post">
        @if (ViewBag.message != null)
        {
            <div class="form-control">
                <div class="col-md-10">@ViewBag.message</div>
            </div>
        }

        <div class="form-group">
            <label asp-for="Username"></label>
            <div class="col-md-10">
                <input asp-for="Username" class="form-control" placeholder="Create a username" />

            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" id="exampleInputEmail1" type="email" placeholder="Enter email" />

            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="col-md-10">
                <input asp-for="Password"  class="form-control" type="password" id="exampleInputPassword1" placeholder="Password"  />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <div class="col-md-10">
                <input asp-for="ConfirmPassword"  class="form-control" type="password" id="exampleInputPassword1" placeholder="Confirm Password"  />
                <span asp-validation-for="ConfirmPassword" style="color:red"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-dark" >Create Account</button>
        </div>
    </form>
</div>

